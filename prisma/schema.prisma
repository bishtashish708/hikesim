generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ExperienceLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum DifficultyPreference {
  EASY
  MODERATE
  STRENUOUS
}

model User {
  id             String    @id @default(cuid())
  name           String?
  email          String?   @unique
  emailVerified  DateTime?
  image          String?
  passwordHash   String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  accounts       Account[]
  sessions       Session[]
  passwordResetTokens PasswordResetToken[]
  profile        UserProfile?
  preferences    TrainingPreferences?
  trainingPlans  TrainingPlan[]
  generatedPlans GeneratedPlan[]
  feedback       WorkoutFeedback[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Hike {
  id              String   @id @default(cuid())
  name            String
  distanceMiles   Float
  elevationGainFt Int
  profilePoints   Json
  countryCode     String   @default("US")
  stateCode       String?
  isSeed          Boolean  @default(false)
  createdAt       DateTime @default(now())

  // Enrichment fields (Step 2)
  latitude        Float?    // Trailhead coordinates
  longitude       Float?
  coordinates     Json?     // Full GPS path [[lat, lon], ...]
  difficulty      String?   // Easy, Moderate, Hard, Very Hard
  trailType       String?   // Loop, Out & Back, Point to Point
  surface         String?   // Paved, Gravel, Dirt, Rocky
  city            String?   // Nearest city
  parkName        String?   // National/State Park name
  region          String?   // For India: Himalayas, Western Ghats, etc.
  sourceUrl       String?   // OSM way/relation ID or source
  lastEnriched    DateTime? // When data was last updated
  description     String?   // Trail description

  plans           GeneratedPlan[]
  trainingPlans   TrainingPlan[]
  userProfiles    UserProfile[]
}

model GeneratedPlan {
  id        String   @id @default(cuid())
  hikeId    String
  settings  Json
  segments  Json
  createdAt DateTime @default(now())
  userId    String?

  hike Hike @relation(fields: [hikeId], references: [id])
  user User? @relation(fields: [userId], references: [id])
}

model TrainingPlan {
  id         String   @id @default(cuid())
  hikeId     String
  trainingStartDate DateTime
  targetDate DateTime
  settings   Json
  weeks      Json
  createdAt  DateTime @default(now())
  userId     String?

  // AI Generation metadata (Step 3)
  aiGenerated         Boolean   @default(false)
  aiModel            String?   // e.g., "openai/gpt-4o-mini"
  generationPrompt   String?   @db.Text
  generationMetadata Json?     // {cost, tokens, timestamp, model}

  hike Hike @relation(fields: [hikeId], references: [id])
  revisions TrainingPlanRevision[]
  user User? @relation(fields: [userId], references: [id])
}

model TrainingPlanRevision {
  id             String   @id @default(cuid())
  trainingPlanId String
  settings       Json
  weeks          Json
  changeLog      Json
  createdAt      DateTime @default(now())

  trainingPlan TrainingPlan @relation(fields: [trainingPlanId], references: [id])
}

model UserProfile {
  id             String          @id @default(cuid())
  userId         String          @unique
  city           String?
  state          String?
  birthDate      DateTime?
  experience     ExperienceLevel @default(BEGINNER)
  weeklyAvailability Json?
  goalHikeId     String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  goalHike Hike? @relation(fields: [goalHikeId], references: [id])
}

model TrainingPreferences {
  id             String               @id @default(cuid())
  userId         String               @unique
  preferredVolumeMinutes Int?
  preferredDifficulty DifficultyPreference?
  trainingVolumeLabel String?
  crossTrainingPreferences Json?
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model WorkoutFeedback {
  id         String   @id @default(cuid())
  userId     String
  planId     String?
  date       DateTime
  workoutType String
  completed  Boolean  @default(false)
  perceivedDifficulty Int?
  actualMinutes Int?
  notes      String?
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
