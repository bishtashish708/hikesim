generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ExperienceLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum DifficultyPreference {
  EASY
  MODERATE
  STRENUOUS
}

model User {
  id             String    @id @default(cuid())
  name           String?
  email          String?   @unique
  emailVerified  DateTime?
  image          String?
  passwordHash   String?
  isAdmin        Boolean   @default(false)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  accounts       Account[]
  sessions       Session[]
  passwordResetTokens PasswordResetToken[]
  profile        UserProfile?
  preferences    TrainingPreferences?
  trainingPlans  TrainingPlan[]
  generatedPlans GeneratedPlan[]
  feedback       WorkoutFeedback[]
  healthConnections HealthConnection[]
  workouts       Workout[]
  challengeProgress UserChallengeProgress[]
  earnedBadges   UserBadge[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Hike {
  id              String   @id @default(cuid())
  name            String
  distanceMiles   Float
  elevationGainFt Int
  profilePoints   Json
  countryCode     String   @default("US")
  stateCode       String?
  isSeed          Boolean  @default(false)
  createdAt       DateTime @default(now())

  // Enrichment fields (Step 2)
  latitude        Float?    // Trailhead coordinates
  longitude       Float?
  coordinates     Json?     // Full GPS path [[lat, lon], ...]
  difficulty      String?   // Easy, Moderate, Hard, Very Hard
  trailType       String?   // Loop, Out & Back, Point to Point
  surface         String?   // Paved, Gravel, Dirt, Rocky
  city            String?   // Nearest city
  parkName        String?   // National/State Park name
  region          String?   // For India: Himalayas, Western Ghats, etc.
  sourceUrl       String?   // OSM way/relation ID or source
  lastEnriched    DateTime? // When data was last updated
  description     String?   // Trail description

  // AllTrails-specific fields
  allTrailsId     String?   @unique // trail_id from AllTrails
  areaName        String?   // area_name (park name)
  popularity      Float?    // popularity score
  difficultyRating Int?     // 1-7 difficulty rating
  routeType       String?   // out and back, loop, point to point
  visitorUsage    Int?      // 1-3 usage level
  avgRating       Float?    // average rating (1-5)
  numReviews      Int?      // number of reviews
  features        Json?     // array of features (dogs-no, views, etc.)
  activities      Json?     // array of activities (hiking, camping, etc.)
  units           String?   // i (imperial) or m (metric)

  // Image fields
  primaryImageUrl String?   // Main thumbnail image
  images          Json?     // Array of {url, source, caption, verified}
  imagesEnrichedAt DateTime? // When images were last fetched

  plans           GeneratedPlan[]
  trainingPlans   TrainingPlan[]
  userProfiles    UserProfile[]
  virtualChallenges VirtualChallenge[]
}

model GeneratedPlan {
  id        String   @id @default(cuid())
  hikeId    String
  settings  Json
  segments  Json
  createdAt DateTime @default(now())
  userId    String?

  hike Hike @relation(fields: [hikeId], references: [id])
  user User? @relation(fields: [userId], references: [id])
}

model TrainingPlan {
  id         String   @id @default(cuid())
  hikeId     String
  trainingStartDate DateTime
  targetDate DateTime
  settings   Json
  weeks      Json
  createdAt  DateTime @default(now())
  userId     String?

  // AI Generation metadata (Step 3)
  aiGenerated         Boolean   @default(false)
  aiModel            String?   // e.g., "openai/gpt-4o-mini"
  generationPrompt   String?   @db.Text
  generationMetadata Json?     // {cost, tokens, timestamp, model}

  hike Hike @relation(fields: [hikeId], references: [id])
  revisions TrainingPlanRevision[]
  user User? @relation(fields: [userId], references: [id])
}

model TrainingPlanRevision {
  id             String   @id @default(cuid())
  trainingPlanId String
  settings       Json
  weeks          Json
  changeLog      Json
  createdAt      DateTime @default(now())

  trainingPlan TrainingPlan @relation(fields: [trainingPlanId], references: [id])
}

model UserProfile {
  id             String          @id @default(cuid())
  userId         String          @unique
  city           String?
  state          String?
  birthDate      DateTime?
  experience     ExperienceLevel @default(BEGINNER)
  weeklyAvailability Json?
  goalHikeId     String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  goalHike Hike? @relation(fields: [goalHikeId], references: [id])
}

model TrainingPreferences {
  id             String               @id @default(cuid())
  userId         String               @unique
  preferredVolumeMinutes Int?
  preferredDifficulty DifficultyPreference?
  trainingVolumeLabel String?
  crossTrainingPreferences Json?
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model WorkoutFeedback {
  id         String   @id @default(cuid())
  userId     String
  planId     String?
  date       DateTime
  workoutType String
  completed  Boolean  @default(false)
  perceivedDifficulty Int?
  actualMinutes Int?
  notes      String?
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Health Platform Integration Models

enum HealthPlatform {
  APPLE_HEALTH
  GOOGLE_FIT
  STRAVA
  GARMIN
  FITBIT
}

enum WorkoutSource {
  MANUAL
  APPLE_HEALTH
  GOOGLE_FIT
  STRAVA
  GARMIN
  FITBIT
}

enum WorkoutType {
  HIKE
  WALK
  RUN
  TREADMILL
  STAIR_CLIMBER
  OTHER
}

model HealthConnection {
  id           String         @id @default(cuid())
  userId       String
  platform     HealthPlatform
  isConnected  Boolean        @default(true)
  lastSyncAt   DateTime?
  accessToken  String?        @db.Text  // For OAuth platforms like Strava
  refreshToken String?        @db.Text
  expiresAt    DateTime?
  metadata     Json?          // Platform-specific settings
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, platform])
}

model Workout {
  id              String        @id @default(cuid())
  userId          String
  source          WorkoutSource @default(MANUAL)
  externalId      String?       // ID from external platform to prevent duplicates
  workoutType     WorkoutType   @default(HIKE)

  // Core metrics
  distanceMiles   Float?
  elevationGainFt Float?
  durationMinutes Int?
  caloriesBurned  Int?

  // Heart rate data
  avgHeartRate    Int?
  maxHeartRate    Int?

  // Timing
  startedAt       DateTime
  endedAt         DateTime?

  // Location (optional)
  startLatitude   Float?
  startLongitude  Float?
  routeData       Json?         // GPS track if available

  // Metadata
  title           String?
  notes           String?
  rawData         Json?         // Original data from health platform

  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, source, externalId])
  @@index([userId, startedAt])
}

// Virtual Challenge / Gamification Models

enum ChallengeDifficulty {
  EASY
  MODERATE
  HARD
  EXTREME
}

enum ChallengeStatus {
  ACTIVE
  COMPLETED
  FAILED
  ABANDONED
}

enum StreakMode {
  STRICT           // Miss a day = fail
  GRACE_PERIOD     // Allow 1 rest day per week
  FLEXIBLE         // No streak requirement, just complete distance
}

model VirtualChallenge {
  id                String              @id @default(cuid())
  name              String              // "Olympic Enchanted Valley"
  description       String              @db.Text
  imageUrl          String?

  // Challenge metrics
  totalDistanceMiles  Float             // Total distance to complete
  totalElevationGainFt Int?             // Optional elevation requirement

  // Difficulty & timing
  difficulty        ChallengeDifficulty @default(MODERATE)
  estimatedDays     Int                 // Suggested days to complete
  maxDaysAllowed    Int?                // Hard deadline (null = no limit)
  streakMode        StreakMode          @default(GRACE_PERIOD)

  // Link to real hike (optional)
  sourceHikeId      String?

  // Milestones (checkpoints along the way)
  milestones        Json                // [{distanceMiles, name, description, badgeId}]

  // Rewards
  completionBadgeId String?
  completionPoints  Int                 @default(100)

  // Visibility
  isActive          Boolean             @default(true)
  isFeatured        Boolean             @default(false)

  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt

  sourceHike        Hike?               @relation(fields: [sourceHikeId], references: [id])
  completionBadge   Badge?              @relation(fields: [completionBadgeId], references: [id])
  userProgress      UserChallengeProgress[]
}

model UserChallengeProgress {
  id                String          @id @default(cuid())
  userId            String
  challengeId       String

  // Progress tracking
  status            ChallengeStatus @default(ACTIVE)
  distanceCompleted Float           @default(0)
  elevationCompleted Float          @default(0)

  // Streak tracking
  currentStreak     Int             @default(0)  // Consecutive days
  longestStreak     Int             @default(0)
  lastActivityDate  DateTime?
  graceDaysUsed     Int             @default(0)  // Rest days used this week

  // Milestones reached (array of milestone indices)
  milestonesReached Json            @default("[]")

  // Points & multipliers
  pointsEarned      Int             @default(0)
  streakMultiplier  Float           @default(1.0)  // Bonus for consecutive days

  // Daily activity logs
  dailyLogs         Json            @default("[]")  // [{date, distanceMiles, elevationFt, workoutId}]

  // Timing
  startedAt         DateTime        @default(now())
  completedAt       DateTime?

  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  user              User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  challenge         VirtualChallenge @relation(fields: [challengeId], references: [id])

  @@unique([userId, challengeId])
  @@index([userId, status])
}

model Badge {
  id          String    @id @default(cuid())
  name        String    // "Enchanted Valley Finisher"
  description String
  imageUrl    String?
  iconName    String?   // Ionicons name for mobile

  // Badge type
  category    String    @default("challenge")  // challenge, streak, milestone, special
  rarity      String    @default("common")     // common, rare, epic, legendary

  // Points awarded when earned
  points      Int       @default(10)

  createdAt   DateTime  @default(now())

  challenges  VirtualChallenge[]
  userBadges  UserBadge[]
}

model UserBadge {
  id        String   @id @default(cuid())
  userId    String
  badgeId   String
  earnedAt  DateTime @default(now())

  // Context of how it was earned
  challengeId String?
  metadata    Json?    // Additional context

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  badge     Badge    @relation(fields: [badgeId], references: [id])

  @@unique([userId, badgeId])
}
